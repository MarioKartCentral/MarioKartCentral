  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Remote Attach",
      "type": "python",
      "request": "attach",
      "connect": { "host": "localhost", "port": 5678 },
      "pathMappings": [
        { "localRoot": "${workspaceFolder}", "remoteRoot": "." }
      ]
    },
    {
      "name": "Python: Starlette",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app:app"]
    }
  ]
}
